# FloatChat Sprint 2 Configuration Template
# Copy this file to .env and fill in your actual values

# Paths
FAISS_INDEX_PATH=./data/faiss_indexes/
TEXT_DATA_PATH=./data/text_files/
MODEL_CACHE_DIR=./models/
DEVICE=cpu  # Change to 'cuda' if you have GPU support

# BGE-M3 Configuration
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024
MAX_LENGTH=8192

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# FAISS Configuration
INDEX_TYPE=FLAT  # Use 'FLAT' for small datasets, 'IVF' for larger ones
N_CLUSTERS=100  # Number of clusters for IVF index

# Gemini AI Configuration (REQUIRED)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_actual_gemini_api_key_here
DEFAULT_LLM_MODEL=gemini-1.5-flash  # Alternative: gemini-1.5-pro

# Sprint 2 Application Settings
APP_TITLE=FloatChat - Oceanographic AI Assistant
APP_DESCRIPTION=Advanced RAG-powered AI assistant for oceanographic research with Google Gemini
