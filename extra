#!/usr/bin/env python3
"""
Test script to verify conversational query detection
"""

import os
import sys

# Add src to path
sys.path.insert(0, 'src')

from app.api.routers.chatbot import is_simple_greeting, is_conversational_query

# Test queries
test_queries = [
    "hi",
    "hello", 
    "hi, this is mohnish",
    "whats my name",
    "what's my name",
    "do you remember me",
    "who are you",
    "tell me about yourself",
    "what are ARGO floats",
    "temperature data"
]

print("=== Testing Conversational Query Detection ===")
print()

for query in test_queries:
    simple_greeting = is_simple_greeting(query)
    conversational = is_conversational_query(query)
    
    print(f"Query: '{query}'")
    print(f"  Simple greeting: {simple_greeting}")
    print(f"  Conversational: {conversational}")
    
    if simple_greeting:
        print(f"  → Will return hardcoded greeting response")
    elif conversational:
        print(f"  → Will use conversational LLM mode")
    else:
        print(f"  → Will use technical RAG + LLM mode")
    print()
